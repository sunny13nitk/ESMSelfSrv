{
  "welcomeFile": "index.html",
  "authenticationMethod": "route",
  "routes": [
    {
      "source": "^/esm/cases/(.*)",
      "target": "/ess/$1",
      "destination": "srv-api",
      "authenticationType": "xsuaa",
      "cacheControl": "no-cache, no-store, must-revalidate",
      "scope": [
        "$XSAPPNAME.EmployeesRole",
        "$XSAPPNAME.ExternalsRole"
      ]
    },
    {
      "source": "^/post",
      "target": "/post",
      "destination": "srv-api",
      "authenticationType": "xsuaa",
      "cacheControl": "no-cache, no-store, must-revalidate",
      "csrfProtection": false,
      "scope": [
        "$XSAPPNAME.EmployeesRole",
        "$XSAPPNAME.ExternalsRole"
      ]
    },
    {
      "source": "^/logout",
      "target": "/logout",
      "destination": "srv-api",
      "authenticationType": "none"
    },
    {
      "source": "^/api",
      "target": "/api",
      "destination": "srv-api",
      "authenticationType": "xsuaa",
      "cacheControl": "no-cache, no-store, must-revalidate"
    },
    {
      "source": "^/login(.*)",
      "target": "/login$1",
      "destination": "srv-api",
      "authenticationType": "xsuaa",
      "cacheControl": "no-cache, no-store, must-revalidate"
    }
  ]
}